{
  "compileOnSave": false,
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "../src/**/*",
    "../static/**/*",
    "../public/**/*",
  ],
  "compilerOptions": {
    "checkJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@js/*": ["./js/*"],
      "@glsl/*": ["./glsl/*"],
      "@utils/*": ["./utils/*"],
      "@workers/*": ["./workers/*"],
      "@src/*": ["./*"],

      "@public/*": ["../public/*"],
      "@static/*": ["../static/*"],

      "@@/*": ["../*"],
    }
  }
}
